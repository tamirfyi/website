---
import BaseHead from '../components/BaseHead.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
const { title, description } = Astro.props;
const { post } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head class="">
    <BaseHead title={title} description={description} />
  </head>
  <body class="h-full mx-auto max-w-screen-md px-6 flex flex-col gap-y-6">
    <Navbar />
    <main class="flex flex-col flex-grow overflow-y-auto gap-y-8">
      <div>
        <h1 class="text-2xl font-semibold">{post.data.title}</h1>
        <FormattedDate date={post.data.published} />
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>
